{
  "id": "/dask-distributed",
  "apps": [
    {
      "id": "/dask-distributed/dask-scheduler",
      "instances": 1,
      "cpus": 1,
      "mem": 2048,
      "cmd": "/usr/local/bin/start-dask-scheduler.sh",
      "fetch": [
        {
          "uri": "https://raw.githubusercontent.com/piersharding/dask-distributed-dcos-docker/master/config.yaml",
          "extract": false,
          "executable": false,
          "cache": false
        }
      ],
      "env": {
        "DASK_CONFIG": "/mnt/mesos/sandbox/config.yaml",
        "HOME": "/home/conda",
        "TERM": "xterm-256color"
      },
      "labels": {
        "MARATHON_SINGLE_INSTANCE_APP": "true",
        "HAPROXY_GROUP": "external",
        "HAPROXY_1_ENABLED": "true",
        "HAPROXY_0_VHOST": "vhost.example.com"
      },
      "container": {
        "type": "MESOS",
        "docker": {
          "image": "10.60.253.37:5000/arl_img_dcos:latest",
          "forcePullImage": true
        }
      },
      "portDefinitions": [
        {
          "protocol": "tcp",
          "port": 0,
          "name": "scheduler",
          "labels": {
            "VIP_0": "/dask-distributed.dask-scheduler:8786"
          }
        },
        {
          "protocol": "tcp",
          "port": 0,
          "name": "bokeh",
          "labels": {
            "VIP_0": "/dask-distributed.dask-scheduler:8787"
          }
        }
      ],
      "healthChecks": [
        {
          "protocol": "COMMAND",
          "command": {
            "value": "curl -fsSL -X GET http://$HOST:$PORT_BOKEH/json/identity.json > /dev/null 2>&1"
          },
          "portIndex": 1,
          "gracePeriodSeconds": 60,
          "intervalSeconds": 20,
          "timeoutSeconds": 10,
          "maxConsecutiveFailures": 3
        }
      ],
      "upgradeStrategy": {
        "minimumHealthCapacity": 0,
        "maximumOverCapacity": 0
      },
      "unreachableStrategy": {
        "expungeAfterSeconds": 0,
        "inactiveAfterSeconds": 0
      }
    },
    {
      "dependencies": [
        "/dask-distributed/dask-scheduler"
      ],
      "id": "/dask-distributed/dask-worker",
      "instances": 1,
      "cpus": 2,
      "mem": 4096,
      "cmd": "/usr/local/bin/start-dask-worker.sh",
      "fetch": [
        {
          "uri": "https://raw.githubusercontent.com/piersharding/dask-distributed-dcos-docker/master/config.yaml",
          "extract": false,
          "executable": false,
          "cache": false
        }
      ],
      "env": {
        "DASK_CONFIG": "/mnt/mesos/sandbox/config.yaml",
        "HOME": "/home/conda",
        "TERM": "xterm-256color"
      },
      "container": {
        "type": "MESOS",
        "docker": {
          "image": "10.60.253.37:5000/arl_img_dcos:latest",
          "forcePullImage": true
        }
      },
      "portDefinitions": [
        {
          "protocol": "tcp",
          "port": 0,
          "name": "worker"
        },
        {
          "protocol": "tcp",
          "port": 0,
          "name": "nanny"
        },
        {
          "protocol": "tcp",
          "port": 0,
          "name": "bokeh"
        }
      ],
      "healthChecks": [
        {
          "protocol": "COMMAND",
          "command": {
            "value": "curl -fsSL -X GET http://$HOST:$PORT_BOKEH/ > /dev/null 2>&1"
          },
          "portIndex": 2,
          "gracePeriodSeconds": 60,
          "intervalSeconds": 20,
          "timeoutSeconds": 10,
          "maxConsecutiveFailures": 3
        }
      ],
      "upgradeStrategy": {
        "minimumHealthCapacity": 0,
        "maximumOverCapacity": 0
      },
      "unreachableStrategy": {
        "expungeAfterSeconds": 0,
        "inactiveAfterSeconds": 0
      }
    },
    {
      "dependencies": [
        "/dask-distributed/dask-scheduler"
      ],
      "id": "/dask-distributed/jupyter",
      "instances": 1,
      "cpus": 1,
      "mem": 2048,
      "cmd": "/usr/local/bin/notebook.sh",
      "container": {
        "type": "MESOS",
        "docker": {
          "image": "10.60.253.37:5000/arl_img_dcos:latest",
          "forcePullImage": true
        }
      },
      "env": {
        "TERM": "xterm-256color"
      },
      "labels": {
        "MARATHON_SINGLE_INSTANCE_APP": "true",
        "HAPROXY_GROUP": "external",
        "HAPROXY_0_ENABLED": "true",
        "HAPROXY_0_REDIRECT_TO_HTTPS": "true",
        "HAPROXY_0_VHOST": "vhost.example.com"
      },
      "portDefinitions": [
        {
          "port": 0,
          "protocol": "tcp",
          "name": "jupyter",
          "labels": {
            "VIP_0": "/dask-distributed.jupyter:8888"
          }
        }
      ],
      "healthChecks": [
        {
          "portIndex": 0,
          "protocol": "MESOS_HTTP",
          "path": "/api",
          "gracePeriodSeconds": 30,
          "intervalSeconds": 20,
          "timeoutSeconds": 10,
          "maxConsecutiveFailures": 3
        }
      ],
      "upgradeStrategy": {
        "minimumHealthCapacity": 0,
        "maximumOverCapacity": 0
      },
      "unreachableStrategy": {
        "expungeAfterSeconds": 0,
        "inactiveAfterSeconds": 0
      }
    }
  ]
}
